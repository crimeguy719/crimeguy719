
#include <stdio.h>
int kthsmallest(int arr [], int n, int k) 
{
    int i,minindex,t;
    for (i = 0; i < k; i++) {
        minindex = i;
        for (int j = i + 1; j < n; j++) {
            if (arr[j] < arr[minindex]) {
                minindex = j;
            }
        }
        t = arr[i];
        arr[i] = arr[minindex];
        arr[minindex] = t;
    }
    return arr[k - 1];
}

int main( )
 {
    int arr[ ] = {7, 10, 44, 133, 20, 15};
    int n = sizeof(arr) / sizeof(arr[0]);
    int k = 3;
    printf("The %dth smallest element is %d\n", k, kthsmallest(arr, n, k));
    return 0;
}
