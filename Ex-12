import java.applet.*;
import java.awt.*;
/* <html>
  <body>
    <applet code="applet_prg.class" width="400" height="150">
    </applet>
  </body>
</html>
*/
public class applet_prg extends Applet
 {
    public void paint(Graphics g) {
        setBackground(Color.lightGray);
        g.setColor(Color.red);
        g.setFont(new Font("Arial", Font.BOLD, 20));
        g.drawString("Arial Bold 20 in Red", 20, 30);
        g.setColor(Color.blue);
        g.setFont(new Font("Courier New", Font.ITALIC, 18));
        g.drawString("Courier Italic 18 in Blue", 20, 60);
        g.setColor(Color.green);
        g.setFont(new Font("TimesRoman", Font.PLAIN, 22));
        g.drawString("Times Roman Plain 22 in Green", 20, 90);
    }
}
