import java.util.Vector;

class VectorExample {
    public static void main(String[] args) {
        Vector fruits = new Vector();

        fruits.add("Apple");
        fruits.add("Banana");
        fruits.add("Mango");
        fruits.add("Orange");

        System.out.println("Fruits in the vector:");
        for (int i = 0; i < fruits.size(); i++) {
            System.out.println(fruits.get(i));
        }

        fruits.remove("Banana");

        System.out.println("\nAfter removing 'Banana':");
        for (int i = 0; i < fruits.size(); i++) {
            System.out.println(fruits.get(i));
        }

        System.out.println("\nFruit at index 1: " + fruits.get(1));
        System.out.println("Total number of fruits: " + fruits.size());
    }
}
