import java.io.*;

public class ExceptionHandling1 {
    public static void main(String[] args) {
        BufferedReader reader = new BufferedReader(new InputStreamReader(System.in));
        
        try {
            System.out.print("Enter your roll number (integer): ");
            int rollNo = Integer.parseInt(reader.readLine());

            System.out.print("Enter first number: ");
            int m = Integer.parseInt(reader.readLine());

            System.out.print("Enter second number: ");
            int n = Integer.parseInt(reader.readLine());

            int div = m / n;
            System.out.println("Division = " + div);

            int[] scores = {85, 90, 78};
            System.out.print("Enter subject index to view marks: ");
            int index = Integer.parseInt(reader.readLine());
            System.out.println("Subject " + index + " marks: " + scores[index]);

            String name = "StudentName";
            System.out.println("Student name length: " + name.length());

            System.out.print("Enter age (as string): ");
            String ageInput = reader.readLine();
            int age = Integer.parseInt(ageInput);

            String grade = "A+";
            System.out.println("Grade character at index 1: " + grade.charAt(1));

            System.out.print("Enter size of array: ");
            int size = Integer.parseInt(reader.readLine());
            int[] dynamicArray = new int[size];
            System.out.println("Array of size " + size + " created.");

        } catch (NumberFormatException e) {
            System.out.println("Error: Invalid number format.");
        } catch (ArithmeticException e) {
            System.out.println("Error: Division by zero.");
        } catch (ArrayIndexOutOfBoundsException e) {
            System.out.println("Error: Array index out of bounds.");
        } catch (NullPointerException e) {
            System.out.println("Error: Null reference encountered.");
        } catch (StringIndexOutOfBoundsException e) {
            System.out.println("Error: String index out of bounds.");
        } catch (NegativeArraySizeException e) {
            System.out.println("Error: Array size cannot be negative.");
        } catch (IOException e) {
            System.out.println("Error: Input/output error occurred.");
        } finally {
            System.out.println("Finally block. Thank you!");
        }
    }
}
